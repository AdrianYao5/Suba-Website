<%- include("partials/header.ejs", { pageTitle: "Home" }); %>

<main class="comfortaa page-content">
    <div class="text-light text-center">
        <div class="img-container">
            <img class="img-background" src="/images/image015.png">
            <div class="img-text p-5 d-flex justify-content-center align-items-end dark-transparent-bg">
                <div class="container p-5">
                    <h1 class="display-4 fw-bold">Quality Products and Services at Cutting Edge of Technology</h1>
                </div>
            </div>
        </div>
    </div>
    <div class="text-light text-center">
        <div class="row gx-lg-3 mx-0">
            <div class="col-12 col-lg-5">
                <div class="p-4 mb-lg-0 mb-5">
                    <div class="d-flex flex-column justify-content-center align-items-center">
                        <h1 class="display-4 fw-lighter mb-3">Key Services</h1>
                        <p class="fw-lighter lead">
                            Suba Technologyâ€™s technical staff has been serving the industries for over 25 plus years and
                            continue to learn new solutions to be in constant parallel with the ever changing world of
                            innovations. Our talented staff is fully committed to meet and understand the
                            customers' needs. We will be their partner in their never-ending quest for quality,
                            competitiveness, and profitability.
                        </p>
                        <a class="btn btn-lg btn-outline-light" href="/services">Learn More ...</a>
                    </div>
                </div>
            </div>
            <div class="col-12 col-lg-7 feature-block">
                <div class="p-3">
                    <% if(locals.serviceList) { const serviceList=locals.serviceList; %>
                        <div class="row gx-md-2 gx-lg-4 gx-0 gy-5 mini-features justify-content-center">
                            <% for (const serviceName in serviceList) { %>
                                <div class="col-6 col-md-4">
                                    <a class="card-link" href="<%= serviceList[serviceName].pageLink %>">
                                        <div class="card-container">
                                            <div class="card border-light-subtle">
                                                <div
                                                    class="card-body d-flex flex-column justify-content-center align-items-center">
                                                    <object class="service-svg" type="image/svg+xml"
                                                        data="<%= serviceList[serviceName].pathToSVG %>"></object>
                                                    <p class="fw-bold mt-3">
                                                        <%= serviceList[serviceName].serviceType %>
                                                    </p>
                                                </div>
                                            </div>
                                            <div class="card card-shadow">
                                                <div class="card-body"></div>
                                            </div>
                                            <div class="card card-shadow-2">
                                                <div class="card-body"></div>
                                            </div>
                                        </div>
                                    </a>
                                </div>
                                <% } %>
                        </div>
                        <% } %>
                </div>
            </div>
        </div>
    </div>

    <div class="text-light text-center">
        <%  
            if (locals.industriesList) {
                const industriesList = locals.industriesList;
                let industryTypes = [];
                let industryImages = [];
                let icons = [];
                let links = [];

                for (const industry in industriesList) {
                    let currentIndustry = industriesList[industry];

                    industryTypes.push(currentIndustry.industryType);
                    industryImages.push(currentIndustry.imagePath);
                    icons.push(currentIndustry.pathToSVG);
                    links.push(currentIndustry.pageLink);
                }
        %>
        <div class="row g-0">
            <div class="col-12 col-lg-7 order-lg-last">
                <div id="imageCarousel" class="cnCarousel carousel slide" data-bs-ride="true">
                    <div class="carousel-indicators">
                        <% for (let i = 0; i < industryTypes.length; i++) { %>
                        <button type="button" data-bs-target="#imageCarousel" data-bs-slide-to="<%=i%>" 
                            <% if (i === 0) { %> class="active" <% } %>
                            aria-current="true" aria-label="Slide <%=i + 1%>"></button>
                        <% } %>
                    </div>
                    <div class="carousel-inner">
                        <% for (let i = 0; i < industryImages.length; i++) { %>
                        <div class="carousel-item<%if (i === 0) { %> active<% } %>" data-bs-interval="15000">
                            <img src="<%=industryImages[i]%>" class="d-block" alt="...">
                        </div>
                        <% } %>
                    </div>
                    <button class="carousel-control-prev" type="button" data-bs-target="#imageCarousel"
                        data-bs-slide="prev">
                        <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Previous</span>
                    </button>
                    <button class="carousel-control-next" type="button" data-bs-target="#imageCarousel"
                        data-bs-slide="next">
                        <span class="carousel-control-next-icon" aria-hidden="true"></span>
                        <span class="visually-hidden">Next</span>
                    </button>
                </div>
            </div>
            <div class="col-12 col-lg-5 blue-bg p-5 order-lg-first industry-gallery">
                <div id="linksCarousel" class="carousel slide carousel-fade" data-bs-ride="true">
                    <div class="carousel-inner p-4">
                        <% for (let j = 0; j < industryTypes.length; j++) { %>
                        <div class="carousel-item<%if (j === 0) { %> active<% } %>" data-bs-interval="15000">
                            <div class="industry-card mx-auto">
                                <a class="card-link">
                                    <div class="card-container">
                                        <div class="card border-light-subtle">
                                            <div class="card-body d-flex flex-column justify-content-center align-items-center">
                                                <object class="industry-svg" type="image/svg+xml" data="<%= icons[j] %>"></object>
                                                <p class="fw-bold mt-3 fs-3 text-light"><%= industryTypes[j] %></p>
                                            </div>
                                        </div>
                                        <div class="card card-shadow">
                                            <div class="card-body"></div>
                                        </div> 
                                        <div class="card card-shadow-2">
                                            <div class="card-body"></div>
                                        </div>
                                    </div>
                                </a>
                            </div>
                        </div>
                        <% } %>
                    </div>
                </div>
                <div class="container p-4">
                    <h1 class="display-4 fw-lighter my-2">Industries We Serve</h1>
                    <a class="btn btn-lg btn-outline-light" href="/industries">Learn More ...</a>
                </div>
            </div>
        </div>
        <% } %>
    </div>

    <div class="text-light text-start blue-bg-2 company-info">
        <div class="row g-0 p-4">
            <div class="col-12 col-md-6">
                <div class="container p-5">
                    <div class="d-flex gap-4 align-items-center mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-people-fill" viewBox="0 0 16 16">
                            <path d="M7 14s-1 0-1-1 1-4 5-4 5 3 5 4-1 1-1 1zm4-6a3 3 0 1 0 0-6 3 3 0 0 0 0 6m-5.784 6A2.24 2.24 0 0 1 5 13c0-1.355.68-2.75 
                                1.936-3.72A6.3 6.3 0 0 0 5 9c-4 0-5 3-5 4s1 1 1 1zM4.5 8a2.5 2.5 0 1 0 0-5 2.5 2.5 0 0 0 0 5"/>
                        </svg>
                        <h1 class="fs-1 fw-bold my-auto">About Us</h1>
                    </div>
                    <p class="fs-5 my-4 fw-lighter">
                        As a manufacturer of finished products and sub-assemblies for Medical, 
                        Telecommunications, IoT, Consumer Electronics, EV, Aerospace and Defense, 
                        we provide optimized solutions by using the latest technologies.
                    </p>
                    <a class="btn btn-lg btn-light text-blue" href="/ourCompany">Learn More ...</a>
                </div>
            </div>
            <div class="col-12 col-md-6">
                <div class="container p-5">
                    <div class="d-flex gap-4 align-items-center mb-3">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" 
                            class="bi bi-phone-fill" viewBox="0 0 16 16">
                            <path d="M3 2a2 2 0 0 1 2-2h6a2 2 0 0 1 2 2v12a2 2 0 0 1-2 2H5a2 2 0 0 1-2-2zm6 11a1 1 0 1 0-2 0 1 1 0 0 0 2 0"/>
                        </svg>
                        <h1 class="fs-1 fw-bold my-auto">Contact Us</h1>
                    </div>
                    <p class="fs-5 my-4 fw-lighter">For more information about Suba Technology:</p>
                    <a class="btn btn-lg btn-light text-blue" href="/contact">Contact Us</a>
                </div>
            </div>
        </div>
    </div>
</main>
